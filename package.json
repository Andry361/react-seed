{
  "name": "react-es6-browserify",
  "version": "0.0.1",
  "repository": "https://github.com/badsyntax/react-es6-browserify",
  "private": true,
  "config": {
    "dist_dir": "./dist",
    "js_bundle": "./dist/js/app",
    "css_bundle": "./dist/css/main"
  },
  "scripts": {
    "env": "env",
    "pretest": "npm install",
    "prerelease": "npm test",
    "prestart": "npm install",
    "prestart-dev": "npm run prestart",
    "prebuild": "npm run prep-dist-dir",
    "bla": "NODE_ENV=production echo $npm_config_production",
    "start": "NODE_ENV=production npm run build && npm run compress && npm run start-server",
    "start-dev": "NODE_ENV=development npm run build-dev && `npm run start-server & npm run watch`",
    "clean": "rm -rf $npm_package_config_dist_dir",
    "prep-dist-dir": "npm run clean && mkdir -p $npm_package_config_dist_dir\"/js\" && mkdir -p $npm_package_config_dist_dir\"/css\"",
    "html-copy": "cd app && find . -name \"*.html\" -type f -exec rsync -R {} \"../\"$npm_package_config_dist_dir\"/\" \\; && npm run html-template",
    "html-template": "[[ \"$NODE_ENV\" == \"production\" ]] && prod=\"true\" || prod=\"false\"; node -p \"require('lodash').template(require('fs').readFileSync('app/index.html'))({version:'$npm_package_version',production:$prod});\" > $npm_package_config_dist_dir\"/index.html\"",
    "html-watch": "nodemon -e html -x \"npm run html-copy\" --watch \"./app\"",
    "browserify": "browserify --entry app/app.jsx --outfile $npm_package_config_js_bundle.$npm_package_version.js --transform babelify --verbose",
    "browserify-dev": "browserify --entry app/app.jsx --outfile $npm_package_config_js_bundle.$npm_package_version.js --transform babelify --verbose --debug",
    "browserify-watch": "watchify --entry app/app.jsx --outfile $npm_package_config_js_bundle.$npm_package_version.js --transform babelify --verbose --debug",
    "compress-js": "uglify -s $npm_package_config_js_bundle.$npm_package_version.js -o $npm_package_config_js_bundle.$npm_package_version.js",
    "compress-css": "`cat $npm_package_config_dist_dir\"/css/vendor.$npm_package_version.css\" $npm_package_config_dist_dir\"/css/main.$npm_package_version.css\" | cleancss -o dist/css/bundle.$npm_package_version.css` && rm $npm_package_config_dist_dir\"/css/vendor.$npm_package_version.css\" && rm $npm_package_config_dist_dir\"/css/main.$npm_package_version.css\"",
    "compress": "npm run compress-js && npm run compress-css",
    "start-server": "cd $npm_package_config_dist_dir && http-server -a localhost -p 8000 -c-1 -o",
    "build": "npm run browserify && npm run html-copy && npm run concat-vendor-css && npm run sass",
    "build-dev": "npm run build",
    "sass": "node-sass --output-style compressed --include-path ./app/scss ./app/scss/main.scss $npm_package_config_css_bundle.$npm_package_version.css",
    "sass-dev": "node-sass --output-style expanded --source-map $npm_package_config_css_bundle.$npm_package_version.css.map --include-path ./app/scss ./app/scss/main.scss $npm_package_config_css_bundle.$npm_package_version.css",
    "sass-watch": "nodemon -e scss -x \" npm run sass-dev\" --watch \"./app\"",
    "concat-vendor-css": "cat node_modules/normalize.css/normalize.css > $npm_package_config_dist_dir\"/css/vendor.$npm_package_version.css\"",
    "watch": "npm run browserify-watch & npm run html-watch & npm run sass-watch",
    "release": "NODE_ENV=production npm run build && npm run compress",
    "lint": "eslint app",
    "test": "jest"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6",
      "jsx"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ]
  },
  "dependencies": {
    "flux": "^2.0.1",
    "normalize.css": "^3.0.2",
    "react": "^0.13.0-rc1"
  },
  "devDependencies": {
    "babel-jest": "^4.0.0",
    "babelify": "^5.0.3",
    "browserify": "^9.0.3",
    "clean-css": "^3.1.2",
    "eslint": "^0.11.0-alpha.0",
    "http-server": "^0.7.5",
    "jest-cli": "^0.4.0",
    "lodash": "^3.3.1",
    "node-sass": "^2.0.1",
    "nodemon": "^1.3.7",
    "uglify": "^0.1.1",
    "watchify": "^2.4.0"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
